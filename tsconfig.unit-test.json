{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noEmit": false
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
